# envlock local development configuration
# Copy to .env and fill in values for your machine.

# Runtime mode (dotenv loader skips when set to production).
ENVLOCK_ENV=development

# Tigris / S3 settings (planned push/pull + enroll flows)
ENVLOCK_TIGRIS_BUCKET=your-tigris-bucket
ENVLOCK_TIGRIS_APP_NAME=your-app-name
ENVLOCK_TIGRIS_PREFIX=envlock/your-app-name
ENVLOCK_TIGRIS_ENDPOINT=https://fly.storage.tigris.dev
ENVLOCK_TIGRIS_REGION=auto

# S3-compatible credentials (Tigris)
AWS_ACCESS_KEY_ID=replace-me
AWS_SECRET_ACCESS_KEY=replace-me
# Optional session token if you use temporary credentials
AWS_SESSION_TOKEN=

# Optional defaults for future commands
ENVLOCK_DEFAULT_ENV=dev
ENVLOCK_DEVICE_NAME=
ENVLOCK_INVITE_TTL=15m
