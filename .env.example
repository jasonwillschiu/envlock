# envlock local development configuration
# Copy to .env and fill in values for your machine.

# Tigris settings (planned push/pull + enroll flows)
# App name can be inferred from the current repo folder name by default.
TIGRIS_BUCKET=envlock
TIGRIS_ENDPOINT=https://fly.storage.tigris.dev
TIGRIS_REGION=auto

# Tigris credentials (S3-compatible)
TIGRIS_ACCESS_KEY=tid_your_access_key_here
TIGRIS_SECRET_KEY=tsec_your_secret_key_here
# Optional session token if you use temporary credentials
TIGRIS_SESSION_TOKEN=

# Optional defaults for future commands
ENVLOCK_DEVICE_NAME=
ENVLOCK_INVITE_TTL=15m
